{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/dist/app.js",
      "cwd": "${workspaceRoot}",
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "sourceMaps": true
    },
    {
      "type": "gdb",
      "request": "launch",
      "name": "start with gdb",
      "target": "/home/leo/.nvm/versions/node/v8.16.0/bin/node",
      "cwd": "${workspaceRoot}",
      "arguments": "/home/leo/repos/r-qap-optimization/dist/app.js",
      "valuesFormatting": "parseText"
      //"preLaunchTask": "yarn_rebuild_debug"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "start with lldb",
      //"preLaunchTask": "yarn_rebuild_debug",
      "program": "/home/leo/.nvm/versions/node/v8.16.0/bin/node",
      "args": ["/home/leo/repos/r-qap-optimization/dist/app.js"]
    },
    {
      "name": "(lldb) Launch",
      "type": "lldb",
      "request": "launch",
      "program": "/home/leo/.nvm/versions/node/v8.16.0/bin/node",
      "args": ["--expose-internals", "dist/app.js"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "lldb"
    }
  ]
}
