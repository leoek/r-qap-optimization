{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "yarn_start",
      "type": "npm",
      "script": "start",
      "problemMatcher": []
    },
    {
      "label": "yarn_rebuild_debug",
      "type": "npm",
      "script": "rebuild:debug",
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}/build"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
